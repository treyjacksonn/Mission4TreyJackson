@{
    ViewData["Title"] = "Movie List";
}

}

@model List<movieEntry>

<link href="~/lib/bootstrap/css/styles.css" rel="stylesheet" />
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<br />
<br />
<br />
<br />
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td> 
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        <!--foreach loop iterates through all the attributes in the model and displays them-->
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.CategoryID</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    <!--asp-route-movieid connect the MovieID to the entry that is clicked-->
                    <td><a asp-controller="subFolder" asp-action="Edit" asp-route-movieid ="@x.MovieID">Edit</a></td>
                    <td><a asp-controller="subFolder" asp-action="Delete" asp-route-movieid ="@x.MovieID">Delete</a></td> 

                </tr>
            }

    
    </tbody>
</table>

<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
